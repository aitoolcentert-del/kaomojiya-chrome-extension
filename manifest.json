{
  "manifest_version": 3,
  "name": "顔文字屋 - Kaomojiya",
  "version": "1.0.0",
  "description": "簡単に顔文字を検索してコピーできる便利なツール",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "clipboardWrite",
    "storage"
  ]
}
